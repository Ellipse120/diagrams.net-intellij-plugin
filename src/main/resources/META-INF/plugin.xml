<idea-plugin>
    <id>de.docs_as_co.diagramsnet-intellij-plugin</id>
    <name>diagrams.net inline editor</name>
    <vendor email="ralf.d.mueller@docs-as-co.de" url="https://docs-as-co.de">docs-as-co.de</vendor>

    <description><![CDATA[
    This plugin provides integration for the diagrams.net (formerly known as draw.io) diagram editor.
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <fileType name="Diagrams.net Diagram" implementationClass="de.docs_as_co.diagramsnet_intellij_plugin.language.DiagramsNetFileType"
                  fieldName="INSTANCE" language="Diagrams.net" extensions="drawio"/>
        <fileEditorProvider implementation="de.docs_as_co.diagramsnet_intellij_plugin.editor.DiagramsEditorProvider" ></fileEditorProvider>
    </extensions>

    <actions>
        <!-- Add your actions here -->

        <action id="de.docs_as_co.JcefAction" class="de.docs_as_co.JcefAction" text="open JCEF"
                description="opens a browser">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl O"/>
        </action>
    </actions>
</idea-plugin>